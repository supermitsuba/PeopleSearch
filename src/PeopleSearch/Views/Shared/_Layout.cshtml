<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - People Search App </title>

    <environment names="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/content/css/site.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/people">
                    People Search Application
                </a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="@(ViewData.ContainsKey("SearchPage") ? "active" : "")"><a href="/people">       <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search</a></li>
                    <li class="@(ViewData.ContainsKey("CreatePage") ? "active" : "")"><a href="/people/create"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Create</a></li>
                    <li class="@(ViewData.ContainsKey("ImportPage") ? "active" : "")"><a href="/people/import"><span class="glyphicon glyphicon-upload" aria-hidden="true"></span> Import</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> About <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="https://github.com/supermitsuba/PeopleSearch/blob/master/README.md#business-requirements">About this site</a></li>
                            <li><a href="#">How to use the site</a></li>
                            <li><a href="#">Tradeoffs</a></li>
                            <li><a href="#">Configuration</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="https://github.com/supermitsuba/PeopleSearch">Source Code</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - People Search Inc.</p>
        </footer>
    </div>
    <environment names="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"></script>
        <script src="~/content/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>