@{
    ViewData["Title"] = "Search For a Person";
    
    Layout = "_Layout";
}

<h2>Search For a Person Today!</h2>

<h3>Just type the first set of letters to get started.</h3>

<form class="form-inline">
  <div class="form-group">
    <label for="searchPerson">Search: </label>
    <input type="search" class="form-control" id="searchPerson" placeholder="type at least 3 letters">
  </div>
  <div class="form-group">
    <input id="simulateDelay" type="checkbox" aria-label="">
    <small><label for="simulateDelay">Simulate Delay</label></small>
  </div>
  <div id="loading" >
    <img  src="~/content/images/default.gif">
    Loading Search Results...
  </div>

</form>
<div id="results" class="searchTable">
    <table id="resultsTable" class="table table-striped table-responsive" >
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Age</th>
          <th>Interests</th>
          <th>Picture</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
    <button id="nextPage"     type="button" class="btn btn-primary">Next Page</button>
    <button id="previousPage" type="button" class="btn btn-primary">Previous Page</button>
</div>

@section scripts {
  <script src="~/content/js/search.js" asp-append-version="true"></script>
}